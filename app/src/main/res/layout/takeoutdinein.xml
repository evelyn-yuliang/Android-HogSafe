<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#F3050505">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="301dp"
        android:layout_height="145dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tt" />

    <TextView
        android:id="@+id/takeout"
        android:layout_width="220dp"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="96dp"
        android:background="#FF5722"
        android:backgroundTint="#D15028"

        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal|top"
        android:text="@string/takeout"
        android:textAppearance="@style/hogsafe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="292dp"
        android:layout_height="160dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="172dp"
        android:background="#201818"
        android:backgroundTint="#631B1818"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/dinein" />

    <TextView

        android:id="@+id/dineIn"
        android:layout_width="211dp"
        android:layout_height="66dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="212dp"
        android:background="#FF5722"
        android:backgroundTint="#D15028"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal|top"
        android:onClick="onDineInClick"
        android:text="@string/dinein"
        android:textAppearance="@style/hogsafe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
